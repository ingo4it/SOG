.featured-category-full_width {
    width: 100%;
    padding: 5px;
    max-width: 1900px;
    
    .items-grid {
      width: 100%;      
      display: flex;
      justify-content: center;
    }
    .one-three {
      flex: 0 0 33.33%;
      padding: 5px;      
    }
    .one-whole {
      flex: 0 0 calc(99.99% - 10px);
      padding: 5px 0;
    }
    .image__container {
      display: flex;
      justify-content: center;
    }
    .image__container:hover {
      opacity: 0.5;      
    }
}
